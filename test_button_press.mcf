% After both buttons have been pressed, a cart can leave the station.

forall id: Cart_Id . 
[
    true* . (
        forward(id, braking, station)
        +
        forward(id, repair, station)
    ) . open_braces(id)
]
<
    push_button . set_braces_closed(id) . (
        forward(id, station, lift)
        +
        backward(id, station, braking)
    )

> true
